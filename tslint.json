{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "no-console": false,
    "no-debugger": false,
    "object-literal-sort-keys": false,
    "semicolon": [
      true,
      "never"
    ],
    "eofline": true,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "max-classes-per-file": [
      false,
      1
    ],
    "jsx-boolean-value": false,
    "no-empty-interface": false,
    "jsx-no-lambda": false
  },
  "jsRules": {
    "no-console": false,
    "no-debugger": false
  }
}